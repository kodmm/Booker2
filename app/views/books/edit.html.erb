<h3>Editing Book</h3>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<% if @book.errors.any? %>
				          <div id="error_explanation" class="alert alert-danger">
				            <ul>
				              <% @book.errors.full_messages.each do |message| %>
				                <li><%= message %></li>
				              <% end %>
				            </ul>
				          </div>
<% end %>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Opinion</h4>
	<%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
	<%= link_to 'show',book_path(@book) %>
	<%= link_to 'back',books_path %>
<% end %>
