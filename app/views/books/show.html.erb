

			<div class="row">
				
					
				<div class="col-xs-3">
					<% if flash[:notice] %>
					<p><%= flash[:notice] %></p>
	                <% end %>
					
					<h2>User info</h2>
					<table class="table">
						<tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback:"no_image.jpg" %></tr> 
						<tr>
							<th>name</th>
							<th><%= @user.name%></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</table>
					<div class="row">
						<% if @user == current_user %>
						<%= link_to edit_user_path(@user) do %>
						<span class="col-xs-12 btn btn-defaut glyphicon glyphicon-asterisk" aria-hidden="true"></span>
						<% end %>
						<% else %>
						<%= link_to user_path(current_user.id) do %>
						<span class="col-xs-12 btn btn-defaut glyphicon glyphicon-asterisk" aria-hidden="true"></span>
						<% end %>
					
						<% end %>
					</div>
					<h2>New Book</h2>
					<%= form_for(@book) do |f| %>
					<h4>Title</h4>
					<%= f.text_field :title %>
					<h4>Body</h4>
					<%= f.text_area :body %>
					<%= f.submit 'Creat Book' %>
					<% end %>
				</div>
				<div class="col-xs-9">
					
					<h2>Book detail</h2>
					<table class="table table-hover table-inverse">
						<tr>
						</tr>
						<tbody>
							
							<tr>
								<td><%= link_to user_path(@user) do %>
									<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback:"no_image.jpg", size:'40x40' %>
									<br>
									<%= @user.name %>
									<% end %>
								</td>
									
								<td><%= link_to @booker.title, book_path(@booker) %></td>
								<td><%= @booker.body %></td>
								<% if @booker.user == current_user %>
								<td><%= link_to 'Edit', edit_book_path(@booker) %></td>
								<td><%= link_to 'Destroy',book_path(@booker), method: :delete, data: {confirm: '削除しますか？'} %></td>
								<% end %>

							</tr>


							
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</body>

