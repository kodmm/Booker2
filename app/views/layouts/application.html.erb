<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> -->
   
    <title>Meshiterro</title>
    
  </head> 

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">

          <div class="navbar-header">
            <a class="navbar-logo" href="/">
              Bookers
            </a>

   
           
          </div>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
              <li class="">
                <%= link_to "Home", user_path(current_user.id), class:"glyphicon glyphicon-plus"  %>
              </li>
              <li class="">
                <%= link_to "Users", users_path, class: "glyphicon glyphicon-plus" %>
              </li>
              <li class="">
                <%= link_to "Books", books_path, class:"glyphicon glyphicon-minus" %>
              </li>
              <li class="">
                <%= link_to "logout", destroy_user_session_path, method: :delete %>
              </li>
              <% else %>
              <li class="">
                <%= link_to "Home", root_path, class:"glyphicon glyphicon-plus" %>
              </li>
              <li class="">
                <%= link_to "About", '/home/about' %>
              </li>
              <li class="">
                <%= link_to "sign up", new_user_registration_path,class: "glyphicon glyphicon-home home" %>
              </li>
              <li class="">
                <%= link_to "login", edit_user_registration_path %>
              </li>
              <% end %> 

            </ul>
          </div>
        </div>
      </nav>
    </div>
      
    <%= yield %>
    </body>
   

